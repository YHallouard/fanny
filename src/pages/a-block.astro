---
import Layout from '../layouts/Layout.astro';
import affiche from '../assets/a_block/a_block_affiche.jpeg';
import illustration1 from '../assets/a_block/a_block_illustration_1.jpeg';
import illustration2 from '../assets/a_block/a_block_illustration_2.jpeg';
import illustration3 from '../assets/a_block/a_block_illustration_3.jpeg';
import illustration4 from '../assets/a_block/a_block_illustration_4.jpeg';
---

<Layout title="À deux ÀBLOCK! - Fanny Blanc">
  <main class="max-w-4xl mx-auto px-4 py-12">
    <a href="/" class="inline-block mb-8 text-accent hover:text-primary transition-colors">← Retour</a>
    
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <img 
        src={affiche.src} 
        alt="Affiche de À deux ÀBLOCK!" 
        class="w-full h-auto"
        loading="eager"
      />
      
      <div class="p-8">
        <h1 class="text-4xl font-bold mb-4 text-primary">À deux ÀBLOCK!</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
          <div>
            <p class="text-xl mb-2">Série 12 x 1min30</p>
            <p class="text-xl">Documentaire 26min</p>
          </div>
          
          <div class="space-y-2">
            <p><strong>Réalisé par</strong> Fanny Blanc</p>
            <p><strong>Produit par</strong> Valérie Domain</p>
            <p><strong>Soutenu par</strong> ÀBLOCK!</p>
            <p class="mt-4"><strong>Avec</strong></p>
            <ul class="list-none space-y-1">
              <li>Valérie Domain</li>
              <li>Victor Ilias</li>
              <li>Alix Noblat</li>
              <li>Lauriane Lamperin</li>
            </ul>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4 mt-8">
          <img src={illustration1.src} alt="Illustration de À deux ÀBLOCK!" class="w-full h-auto rounded" loading="lazy" />
          <img src={illustration2.src} alt="Illustration de À deux ÀBLOCK!" class="w-full h-auto rounded" loading="lazy" />
          <img src={illustration3.src} alt="Illustration de À deux ÀBLOCK!" class="w-full h-auto rounded" loading="lazy" />
          <img src={illustration4.src} alt="Illustration de À deux ÀBLOCK!" class="w-full h-auto rounded" loading="lazy" />
        </div>
      </div>
    </div>
  </main>
</Layout>